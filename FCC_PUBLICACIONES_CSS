/*
STYLOS PARA GESTION DE TOOGLE BUTTON
*/

.FCC_SWITCH {
  position: relative;
  display: inline-block;
  
  width: 50px;
  height: 25px;
}

.FCC_SWITCH input {display:none;}

.FCC_SLIDER {
  position: absolute;
  cursor: pointer;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #ccc;
  -webkit-transition: .4s;
  transition: .4s;
}

.FCC_SLIDER:before {
  position: absolute;
  content: "";
  
  width: 40%;
  height: 60%;
 
  left: 10%;
  bottom: 20%;
  background-color: white;
  -webkit-transition: .4s;
  transition: .4s;
}

input:checked + .FCC_SLIDER {
  background-color: #2196F3;
}

input:focus + .FCC_SLIDER {
  box-shadow: 0 0 1px #2196F3;
}

input:checked + .FCC_SLIDER:before {
  -webkit-transform: translateX(90%);
  -ms-transform: translateX(90%);
  transform: translateX(90%);
}

/* Rounded sliders */
.FCC_SLIDER.round {
  border-radius: 50px;
}

.FCC_SLIDER.round:before {
  border-radius: 50%;
}

/*
FIN STYLOS PARA GESTION DE TOOGLE BUTTON
*/
